<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.omorni.activity.AddAccountActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/card_layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_dp10"
            android:orientation="vertical">

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/first_name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:background="@android:color/transparent"
                android:hint="John"
                android:paddingBottom="@dimen/padding_dp10"
                android:paddingTop="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp1"
                android:background="@android:color/darker_gray" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/lastname"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:background="@android:color/transparent"
                android:hint="John"
                android:paddingBottom="@dimen/padding_dp10"
                android:paddingTop="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp1"
                android:background="@android:color/darker_gray" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/iban"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/account_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:background="@android:color/transparent"
                android:hint="555555555"
                android:inputType="textPostalAddress"
                android:maxEms="34"
                android:maxLength="34"
                android:paddingBottom="@dimen/padding_dp10"
                android:paddingTop="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp1"
                android:background="@android:color/darker_gray" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/conf_iban"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/confirm_account_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:background="@android:color/transparent"
                android:hint="555555555"
                android:inputType="textPostalAddress"
                android:maxEms="34"
                android:maxLength="34"
                android:paddingBottom="@dimen/padding_dp10"
                android:paddingTop="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp1"
                android:background="@android:color/darker_gray" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/bank_register"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/country_code_text"
                    android:layout_width="115dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/down_spinner_arrow"
                    android:gravity="center"
                    android:textColor="@color/colorBlack" />

                <Spinner
                    android:id="@+id/country_spinner"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="115dp"
                    android:layout_height="38dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack" />

                <com.omorni.custom_views.Normal_EditText
                    android:id="@+id/mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:layout_marginTop="@dimen/margin_dp5"
                    android:background="@android:color/transparent"
                    android:hint="+48787878778"
                    android:inputType="number"
                    android:paddingBottom="@dimen/padding_dp10"
                    android:paddingTop="@dimen/padding_dp10"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/textsize_sp15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="115dp"
                    android:layout_height="@dimen/margin_dp1"
                    android:background="@android:color/darker_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>


            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/select_bank"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_Text_View
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/down_grey"
                android:hint="abc"
                android:paddingBottom="@dimen/padding_dp10"
                android:paddingTop="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp1"
                android:background="@android:color/darker_gray" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/account_currency"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_Text_View
                android:id="@+id/currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/down_grey"
                android:hint="SAR"
                android:paddingBottom="@dimen/padding_dp10"
                android:paddingTop="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp1"
                android:background="@android:color/darker_gray" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:text="@string/bank_address"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/bank_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp5"
                android:background="@android:color/transparent"
                android:hint="ABCD"
                android:paddingBottom="@dimen/padding_dp10"
                android:paddingTop="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp1"
                android:background="@android:color/darker_gray" />

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/add_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin_dp20"
                android:background="@drawable/place_order_drawable"
                android:gravity="center"
                android:text="@string/add_account"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_sp18" />

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin_dp20"
                android:background="@drawable/place_order_drawable"
                android:gravity="center"
                android:text="@string/edit_account"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_sp18"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_dp15"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
