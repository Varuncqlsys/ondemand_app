<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/add_new_lang"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_dp5"
                android:padding="@dimen/padding_dp10"
                android:src="@drawable/cross_white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_dp5"
            android:layout_marginRight="@dimen/margin_dp5"
            android:layout_marginTop="@dimen/margin_dp10"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.omorni.custom_views.Normal_Text_View
                android:id="@+id/language"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin_dp3"
                android:layout_marginRight="@dimen/margin_dp3"
                android:layout_weight="1.5"
                android:background="@drawable/rounded_rectangle"
                android:drawablePadding="@dimen/padding_dp3"
                android:drawableRight="@drawable/down_arrow"
                android:gravity="center"
                android:hint="@string/enter_lang"
                android:paddingRight="@dimen/padding_dp5"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/go_on_duty"
                android:textSize="@dimen/textsize_sp17" />

            <com.omorni.custom_views.Normal_Text_View
                android:id="@+id/level"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin_dp3"
                android:layout_marginRight="@dimen/margin_dp3"
                android:layout_weight="1.5"
                android:background="@drawable/rounded_rectangle"
                android:drawablePadding="@dimen/padding_dp3"
                android:drawableRight="@drawable/down_arrow"
                android:gravity="center"
                android:hint="@string/select_level"
                android:paddingRight="@dimen/padding_dp5"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/go_on_duty"
                android:textSize="@dimen/textsize_sp17" />
        </LinearLayout>

        <com.omorni.custom_views.Normal_Text_View
            android:id="@+id/save_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_dp15"
            android:layout_marginTop="@dimen/margin_dp25"
            android:background="@drawable/sort_bg_drawable"
            android:gravity="center"
            android:padding="@dimen/padding_dp10"
            android:text="@string/save_lang"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_sp17" />
    </LinearLayout>
</RelativeLayout>