<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">


            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"
                android:gravity="center"

                android:text="ewd"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_dp12"
                android:src="@drawable/cross_white"
                android:visibility="visible" />

        </RelativeLayout>

        <com.omorni.custom_views.Bold_Text_View
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:gravity="center"
            android:padding="@dimen/padding_dp10"
            android:text="abc aldne dek,d ekd ekde k ed,"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/textsize_sp18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_message"
            android:layout_marginTop="@dimen/margin_dp10"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_dp10">

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp5"
                android:layout_marginRight="@dimen/margin_dp5"
                android:background="@drawable/sort_bg_drawable"
                android:gravity="center"
                android:padding="@dimen/padding_dp5"
                android:text="@string/try_again"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_sp18" />

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/call_him"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp5"
                android:layout_marginRight="@dimen/margin_dp5"
                android:background="@drawable/sort_bg_drawable"
                android:gravity="center"
                android:padding="@dimen/padding_dp5"
                android:text="@string/call_him"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_sp18" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>