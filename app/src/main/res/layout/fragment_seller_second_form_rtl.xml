<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.omorni.fragment.SellerSecondFormFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_dp10"
                android:src="@drawable/steps2_rtl" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.omorni.custom_views.Bold_Text_View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp15"
                    android:layout_marginTop="@dimen/margin_dp10"
                    android:text="@string/basic"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/textsize_sp16" />

                <com.omorni.custom_views.Bold_Text_View
                    android:id="@+id/see_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right|end"
                    android:layout_marginLeft="@dimen/margin_dp20"
                    android:layout_marginTop="@dimen/margin_dp10"
                    android:text="@string/see_example"
                    android:textColor="@color/link_color" />
            </RelativeLayout>

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/basic_description"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:background="@drawable/rounded_rectangle"
                android:gravity="start"
                android:hint="@string/describe_basic"
                android:inputType="textMultiLine"
                android:padding="@dimen/padding_dp6"
                android:scrollbars="vertical"
                android:textColor="@color/gray_color_left_text"
                android:textColorHint="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_dp10"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp15"
                android:text="@string/price"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/basic_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:background="@drawable/search_bg_gray_radius"
                android:drawableLeft="@drawable/down_arrow"
                android:gravity="center_vertical"
                android:hint="@string/per_hour"
                android:paddingLeft="@dimen/padding_dp10"
                android:paddingRight="@dimen/padding_dp10"

                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/basic_additional_price"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp10"
                android:background="@drawable/search_bg_gray_radius"
                android:gravity="center_vertical"
                android:hint="@string/additional_price"
                android:inputType="number"
                android:padding="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_dp15"
                android:background="@color/divider_gray"></View>

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_dp10"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp15"
                android:text="@string/standard"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/standard_description"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:background="@drawable/rounded_rectangle"
                android:gravity="start"
                android:hint="@string/describe_standard"
                android:inputType="textMultiLine"
                android:padding="@dimen/padding_dp6"
                android:scrollbars="vertical"
                android:textColor="@color/gray_color_left_text"
                android:textColorHint="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_dp10"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp15"
                android:text="@string/price"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/standard_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:background="@drawable/search_bg_gray_radius"
                android:drawableLeft="@drawable/down_arrow"
                android:gravity="center_vertical"
                android:hint="@string/per_hour"
                android:paddingLeft="@dimen/padding_dp10"
                android:paddingRight="@dimen/padding_dp10"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/standard_additional_price"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp10"
                android:background="@drawable/search_bg_gray_radius"
                android:gravity="center_vertical"
                android:hint="@string/additional_price"
                android:inputType="number"
                android:padding="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_dp15"
                android:background="@color/divider_gray"></View>

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_dp10"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp15"
                android:text="@string/premium"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/premium_description"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:background="@drawable/rounded_rectangle"
                android:gravity="start"
                android:hint="@string/describe_premium"
                android:inputType="textMultiLine"
                android:padding="@dimen/padding_dp6"
                android:scrollbars="vertical"

                android:textColor="@color/gray_color_left_text"
                android:textColorHint="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_dp10"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp15"
                android:text="@string/price"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/premium_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:background="@drawable/search_bg_gray_radius"
                android:drawableLeft="@drawable/down_arrow"
                android:gravity="center_vertical"
                android:hint="@string/per_hour"
                android:paddingLeft="@dimen/padding_dp10"
                android:paddingRight="@dimen/padding_dp10"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp15" />

            <com.omorni.custom_views.Normal_EditText
                android:id="@+id/premium_additional_price"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_marginRight="@dimen/margin_dp15"
                android:layout_marginTop="@dimen/margin_dp10"
                android:background="@drawable/search_bg_gray_radius"
                android:gravity="center_vertical"
                android:hint="@string/additional_price"
                android:inputType="number"
                android:padding="@dimen/padding_dp10"
                android:singleLine="true"
                android:textColor="@color/gray_color_left_text"
                android:textSize="@dimen/textsize_sp15" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_dp15"
                android:button="@drawable/checkbox_change"
                android:checked="false"
                android:padding="@dimen/padding_dp10"
                android:text="@string/spare_part"
                android:textColor="@color/gray_color_left_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_dp15"
                android:background="@color/divider_gray"></View>

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_dp10"
                android:background="@drawable/place_order_drawable"
                android:gravity="center"
                android:text="@string/save_continue"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_sp18" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
