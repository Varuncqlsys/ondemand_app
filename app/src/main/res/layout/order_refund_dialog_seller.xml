<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_dp10"
        android:layout_marginRight="@dimen/margin_dp10"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_dp10"
        android:paddingLeft="@dimen/padding_dp15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.omorni.custom_views.Bold_Text_View
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_dp15"
                android:gravity="center"
                android:text="@string/refund"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/padding_dp10"
                android:id="@+id/cross"
                android:src="@drawable/cross_popup" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_dp15"
            android:layout_marginTop="@dimen/margin_dp15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_dp10"
                android:src="@drawable/radio_un_select_seller" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_dp2"
                android:text="@string/seller_not_show"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_marginTop="@dimen/margin_dp5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/second_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_dp10"
                android:src="@drawable/radio_un_select_seller" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_dp2"
                android:text="@string/not_satisfied"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_dp15"
            android:layout_marginTop="@dimen/margin_dp5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/third_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_dp10"
                android:src="@drawable/radio_un_select_seller" />

            <com.omorni.custom_views.Normal_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_dp2"
                android:text="@string/other"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sp15" />

        </LinearLayout>

        <com.omorni.custom_views.Normal_EditText
            android:id="@+id/edit_other"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/margin_dp10"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_marginTop="@dimen/margin_dp10"
            android:background="@drawable/edit_text_background"
            android:gravity="top"
            android:visibility="gone"
            android:hint="@string/other_here"
            android:padding="@dimen/padding_dp10"
            android:textSize="@dimen/textsize_sp14" />

        <com.omorni.custom_views.Bold_Text_View
            android:id="@+id/refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_dp30"
            android:background="@drawable/green_requesty_seller_drawable"
            android:drawableLeft="@drawable/refund_option"
            android:drawablePadding="@dimen/padding_dp15"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_dp15"
            android:text="@string/refund"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_sp17" />

    </LinearLayout>

</RelativeLayout>