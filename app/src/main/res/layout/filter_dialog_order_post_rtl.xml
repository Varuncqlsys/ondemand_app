<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_dp15"
                android:src="@drawable/cross_white" />

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/filter_by"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_sp18" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:id="@+id/category_layout"
            android:padding="@dimen/padding_dp15">

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Normal_Text_View
                android:id="@+id/select_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_dp10"
                android:background="@color/search_background"
                android:drawableLeft="@drawable/down_arrow"
                android:gravity="center_vertical"
                android:hint="@string/select_category"
                android:paddingLeft="@dimen/margin_dp10"
                android:paddingRight="@dimen/padding_dp10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_sp16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp15"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/padding_dp15">

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_type"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Normal_Text_View
                android:id="@+id/select_order_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_dp10"
                android:background="@color/search_background"
                android:drawableLeft="@drawable/down_arrow"
                android:gravity="center_vertical"
                android:hint="@string/order_type"
                android:paddingLeft="@dimen/margin_dp10"
                android:paddingRight="@dimen/padding_dp10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_sp16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp15"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/padding_dp15">

            <com.omorni.custom_views.Bold_Text_View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/textsize_sp16" />

            <com.omorni.custom_views.Normal_Text_View
                android:id="@+id/select_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_dp10"
                android:background="@color/search_background"
                android:drawableLeft="@drawable/down_arrow"
                android:gravity="center_vertical"
                android:hint="@string/job_status"
                android:paddingLeft="@dimen/margin_dp10"
                android:paddingRight="@dimen/padding_dp10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_sp16" />
        </LinearLayout>


    </LinearLayout>

    <com.omorni.custom_views.Bold_Text_View
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_dp20"
        android:layout_marginRight="@dimen/margin_dp10"
        android:background="@drawable/green_requesty_drawable"
        android:gravity="center"
        android:text="@string/clear_all"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_sp16" />

    <com.omorni.custom_views.Bold_Text_View
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/margin_dp20"
        android:layout_marginLeft="@dimen/margin_dp10"
        android:background="@drawable/green_requesty_drawable"
        android:gravity="center"
        android:text="@string/apply"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_sp16" />
</RelativeLayout>