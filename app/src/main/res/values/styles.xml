<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSeller" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySeller</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSeller</item>
        <item name="colorAccent">@color/colorPrimaryDarkSeller</item>
    </style>

    <style name="Theme_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme_Dialog_white" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme_Dialog_preview" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#000000</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">6dp</item>
        <item name="centered">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/golden</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>


    <style name="CaldroidDefaultDarkCalendarViewLayoutBuyer">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CaldroidDefaCustom" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultDarkCalendarViewLayoutBuyer
        </item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultDarkMonthName</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultDarkCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultDarkCell</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultDarkGridView</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultWeekday</item>
    </style>

    <style name="CaldroidDefaultWeekday">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>


    <style name="CaldroidDefaultDarkMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="CaldroidDefaultDarkGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="CaldroidDefaultDarkCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/text_color_selected</item>
        <item name="android:background">@drawable/calender_cell</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="CaldroidDefaultWeekdaySeller">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="CaldroidDefaultDarkCalendarViewLayoutSeller">
        <item name="android:background">@color/colorPrimarySeller</item>
    </style>

    <style name="CaldroidDefaCustomSeller" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultDarkCalendarViewLayoutSeller
        </item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultDarkMonthNameSeller</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultDarkCellSeller</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultDarkCellSeller</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultDarkGridViewSeller</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultWeekdaySeller</item>
    </style>

    <style name="CaldroidDefaultDarkMonthNameSeller" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="CaldroidDefaultDarkGridViewSeller" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/colorPrimarySeller</item>
    </style>

    <style name="CaldroidDefaultDarkCellSeller" parent="CaldroidDefaultCell">
        <item name="android:textColor">@color/text_color_selected</item>
        <item name="android:background">@drawable/calender_cell_seller</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="Header" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ExpMonth" parent="@style/Spinner">
        <item name="android:entries">@array/month_array</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="ExpYear" parent="@style/Spinner">
        <item name="android:entries">@array/year_array</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="Currency" parent="@style/Spinner">
        <item name="android:entries">@array/currency_array</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem"></style>

    <style name="CardNumber" parent="@style/TextField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="CVC" parent="@style/TextField">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TextField" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Save" parent="@style/Button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:text">@string/card_save</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


</resources>
